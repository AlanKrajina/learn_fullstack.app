<%=  stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track' => true %>

<% if logged_in? %>
<main class="main">
  <aside class="sidebar">
    <nav class="nav">
      <ul>
        <li><%= link_to 'Homepage', user_path(current_user.id)%></li>
        <li><%= link_to 'All Lessons', lessons_path %></li>

        <%= form_tag("/lessons", method: "get") do %>
          <li class ="search"><%= label_tag(:title, "Search lesson by title:") %></li>
          
          <%= text_field_tag(:title) %></br></br>
            <%= submit_tag("Search") %>
          <% end %>

      </ul>
    </nav>
  </aside>

  <section class="twitter">
    <div class="container">
    <%= form_for @lesson do |f| %>
        <div>
        <%= f.label :title%></br>
        <%= f.text_field :title %>
        </div></br>
        <div>
        <%= f.label :content%></br>
        <%= f.text_area(:content, size: "33x5")  %>
        </div></br>
    
        <%= f.fields_for :comment do |v|%>
            <%= v.label :comment%></br>
            <%= v.text_area(:text, size: "33x5") %>
        <% end %>
    <br><br>
    <%= f.submit %>
    <br><br>
    <% end %>
    </div>
  </section>
</main>
<% end %>


<div>
<%= form_for @lesson do |f| %>
    <div>
    <%= f.label :title%>
    <%= f.text_field :title %>
    </div></br>
    <div>
    <%= f.label :content%>
    <%= f.text_field :content %>
    </div></br>

    <%= f.fields_for :comment do |v|%>
        <%= v.label :text%></br>
        <%= v.text_field :text %>
    <% end %>
<br><br>
<%= f.submit %>
<br><br>
<% end %>
</div>
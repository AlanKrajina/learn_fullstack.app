<%=  stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track' => true %>


<% if logged_in? %>
<main class="main">
  <aside class="sidebar">
    <nav class="nav">
      <ul>
        <li class="active"><a>Welcome <%= current_user.name %></a></li>

        <li><%= link_to 'All Lessons', lessons_path %></li>
        <li><%= link_to 'Create Lesson', new_user_lesson_path(current_user) %></li>


        <li class="active"><a>Your Lessons:</a></li>
        <% @lessons.each do |lesson|  %>
          <li><%= link_to lesson.title, lesson_path(lesson) %></li>
        <% end %>

        <li class="active"><%= link_to "Log Out", signout_path, method: :delete %></li>
      </ul>
    </nav>
  </aside>

  <section class="twitter">
    <div class="container">
      <a target="_blank" href="https://www.linkedin.com/in/alankrajina">
        <img class="social" src="https://pndblog.typepad.com/.a/6a00e0099631d0883301bb09d01edf970d-800wi">
      </a>
      <p>Connect with me</p>
      <p>on LinkedIn!</p>
    </div>
  </section>
</main>



<% end %>






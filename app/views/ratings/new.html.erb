<%=  stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track' => true %>

<% if logged_in? %>
<main class="main">
<%= render 'lessons/aside' %>
  <section class="twitter">
    <div class="container">
	  <p>New rating form</p>
	  <%= form_for [@lesson, @rating] do |f| %>
		<p><%= f.number_field :stars, min:0, max:10  %></p>
		<%= f.submit %>
	  <% end %>
    </div>
  </section>
</main>
<% end %>


